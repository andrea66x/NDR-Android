<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fiec.ndr">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MenuPrincipal"
            android:label="@string/menu"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MENUPRINCIPAL" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Secciones"
            android:label="@string/secciones">
            <intent-filter>
                <action android:name="android.intent.action.SECCIONES" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".InformacionGeneral"
            android:label="@string/info_general" />

        <activity
            android:name=".Preparacion"
            android:label="@string/title_activity_preparacion"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".Medidas"
            android:label="@string/title_activity_medidas"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".Presion_arterial"
            android:label="@string/title_activity_presion_arterial"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".Laboratorio"
            android:label="@string/title_activity_laboratorio"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <uses-feature android:name="android.hardware.camera" android:required="false"></uses-feature>

    </application>

</manifest>