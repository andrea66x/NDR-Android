<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fiec.ndr.MenuPrincipal"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MenÃº Principal"
        android:id="@+id/txt_opciones"
        android:textStyle="bold"
        android:textSize="40sp"
        android:textColor="#087f2b"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/lbl_nuevo"
                    android:layout_weight="1"
                    android:layout_gravity="start|center"
                    android:text="@string/lbl_nuevo" />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_nueva"
                    android:src="@mipmap/nuevo_item"
                    android:background="@drawable/rounded_corners"
                    android:onClick="nuevoFormulario"
                    android:layout_gravity="center|end"
                    android:minWidth="50dp"
                    android:maxWidth="50dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textView"
                    android:layout_weight="1"
                    android:layout_gravity="start|center"
                    android:text="@string/lbl_buscar" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_buscar"
                    android:src="@mipmap/buscar"
                    android:background="@drawable/rounded_corners"
                    android:onClick="nuevoFormulario"
                    android:layout_gravity="center|end"
                    android:minWidth="50dp"
                    android:maxWidth="50dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textView2"
                    android:layout_weight="1"
                    android:layout_gravity="start|center"
                    android:text="@string/lbl_formularios" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_formularios"
                    android:src="@mipmap/formularios"
                    android:background="@drawable/rounded_corners"
                    android:onClick="nuevoFormulario"
                    android:layout_gravity="center|end"
                    android:minWidth="50dp"
                    android:maxWidth="50dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textView3"
                    android:layout_weight="1"
                    android:layout_gravity="start|center"
                    android:text="@string/lbl_sincronizar" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_sincronizar"
                    android:src="@mipmap/sincronizar"
                    android:background="@drawable/rounded_corners"
                    android:onClick="nuevoFormulario"
                    android:layout_gravity="center|end"
                    android:minWidth="50dp"
                    android:maxWidth="50dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textView4"
                    android:layout_weight="1"
                    android:layout_gravity="start|center"
                    android:text="@string/lbl_informacion" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_informacion"
                    android:src="@mipmap/informacion"
                    android:background="@drawable/rounded_corners"
                    android:onClick="nuevoFormulario"
                    android:layout_gravity="center|end"
                    android:minWidth="50dp"
                    android:maxWidth="50dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textView5"
                    android:layout_weight="1"
                    android:layout_gravity="start|center"
                    android:text="@string/lbl_salir" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_salir"
                    android:src="@mipmap/salir"
                    android:background="@drawable/rounded_corners"
                    android:onClick="nuevoFormulario"
                    android:layout_gravity="center|end"
                    android:minWidth="50dp"
                    android:maxWidth="50dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
