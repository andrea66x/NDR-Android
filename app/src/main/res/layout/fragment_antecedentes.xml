<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fiec.ndr.inf_general.AntecedentesFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dato_marginv"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dato_marginv"
                android:paddingTop="@dimen/dato_marginv">

                <TextView
                    android:id="@+id/txtV_ant_glucosa"
                    style="@style/lblTextStyle"
                    android:gravity="top|start"
                    android:text="¿Ha tenido glucosa (azúcar) alta en la sangre?:" />

                <RadioGroup
                    android:id="@+id/rg_ant_glucosa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/datos_ant_glucosa_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:text="NO" />

                    <RadioButton
                        android:id="@+id/datos_ant_glucosa_si"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:paddingRight="10dp"
                        android:text="SI" />
                </RadioGroup>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dato_marginv"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dato_marginv"
                android:paddingTop="@dimen/dato_marginv">

                <TextView
                    android:id="@+id/txtV_ant_familia"
                    style="@style/lblTextStyle"
                    android:gravity="top|start"
                    android:text="¿Sus familiares directos tienen diabetes?:" />

                <RadioGroup
                    android:id="@+id/rg_ant_familia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/datos_ant_familia_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:text="NO" />

                    <RadioButton
                        android:id="@+id/datos_ant_familia_si"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:paddingRight="10dp"
                        android:text="SI" />
                </RadioGroup>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dato_marginv"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dato_marginv"
                android:paddingTop="@dimen/dato_marginv">

                <TextView
                    android:id="@+id/txtV_ant_parientes"
                    style="@style/lblTextStyle"
                    android:gravity="top|start"
                    android:text="¿Sus demás familiares tienen diabetes?:" />

                <RadioGroup
                    android:id="@+id/rg_ant_parientes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/datos_ant_parientes_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:text="NO" />

                    <RadioButton
                        android:id="@+id/datos_ant_parientes_si"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:paddingRight="10dp"
                        android:text="SI" />
                </RadioGroup>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dato_marginv"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dato_marginv"
                android:paddingTop="@dimen/dato_marginv"
                android:id="@+id/lyt_embarazo">

                <TextView
                    android:id="@+id/txtV_ant_embarazo"
                    style="@style/lblTextStyle"
                    android:gravity="top|start"
                    android:text="¿Tuvo diabetes en el embarazo?:" />

                <RadioGroup
                    android:id="@+id/rg_ant_embarazo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/datos_ant_embarazo_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:text="NO"
                        android:checked="false" />

                    <RadioButton
                        android:id="@+id/datos_ant_embarazo_si"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:paddingRight="10dp"
                        android:text="SI" />
                </RadioGroup>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dato_marginv"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dato_marginv"
                android:paddingTop="@dimen/dato_marginv"
                android:id="@+id/lyt_hijos">

                <TextView
                    android:id="@+id/txtV_ant_pso_hijos"
                    style="@style/lblTextStyle"
                    android:gravity="top|start"
                    android:text="¿Tuvo hijos de mas de 4Kgs al nacer?:" />

                <RadioGroup
                    android:id="@+id/rg_ant_pso_hijos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/datos_ant_pso_hijos_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:text="NO" />

                    <RadioButton
                        android:id="@+id/datos_ant_pso_hijos_si"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:paddingRight="10dp"
                        android:text="SI"
                        android:checked="false" />
                </RadioGroup>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dato_marginv"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dato_marginv"
                android:paddingTop="@dimen/dato_marginv">

                <TextView
                    android:id="@+id/txtV_ant_presion"
                    style="@style/lblTextStyle"
                    android:gravity="top|start"
                    android:text="¿Tiene familiares con presión arterial alta?:" />

                <RadioGroup
                    android:id="@+id/rg_ant_presion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/datos_ant_presion_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:text="NO" />

                    <RadioButton
                        android:id="@+id/datos_ant_presion_si"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:paddingRight="10dp"
                        android:text="SI" />
                </RadioGroup>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dato_marginv"
                android:paddingTop="@dimen/dato_marginv">

                <TextView
                    android:id="@+id/txtV_ant_renal"
                    style="@style/lblTextStyle"
                    android:gravity="top|start"
                    android:text="¿Sus familiares directos tienen alguna enfermedad renal?:" />

                <RadioGroup
                    android:id="@+id/rg_ant_renal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/datos_ant_renal_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:text="NO" />

                    <RadioButton
                        android:id="@+id/datos_ant_renal_si"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:paddingRight="10dp"
                        android:text="SI" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyt_ant_fam_renal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dato_marginv"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dato_marginv"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtV_ant_enf_renal"
                    style="@style/lblTextStyle"
                    android:gravity="top|start"
                    android:longClickable="true"
                    android:text="¿Qué enfermedad?:" />

                <EditText
                    android:id="@+id/datos_ant_enf_renal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/txtbox"
                    android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:gravity="bottom|start"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>